{
  "hosting": {
    "public": ".next",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "../",
    "ignore": [
      "client/**",
      "firebase.json",
      "firebase-debug.log",
      "**/node_modules/**",
      "**/.*"
    ]
  }
} 